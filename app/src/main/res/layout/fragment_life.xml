<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              xmlns:tab="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="net.togogo.newsclient.fragments.LifeFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_life"
            tab:tabMode="scrollable"
            tab:tabGravity="center"
            android:layout_weight="1"
            tab:tabTextColor="@color/colorPrimaryText"
            tab:tabIndicatorColor="@color/colorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_life_gene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:src="@drawable/add_tab"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_life"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
