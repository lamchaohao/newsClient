<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.togogo.newsclient.activity.GuideActivity">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_guide_opening"
        android:background="@drawable/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_guide_arrow"
                android:layout_gravity="center"
                android:src="@drawable/splash_arrows_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:src="@drawable/splash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/rl_guide_lifeStyle"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_guide_lifeStyle"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/bt_guide_next"
            android:text="选择你的生活方式"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_guide_choose_sex"

        android:background="@drawable/splash_sex_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/splash_sex_whoareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:id="@+id/fl_guide_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="1dp"
                        android:id="@+id/iv_guide_man"
                        android:src="@drawable/splash_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_guide_man_choose_tip"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/splash_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/tv_guide_man_name"
                    android:text="男"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout

                    android:id="@+id/fl_guide_women"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="1dp"
                        android:id="@+id/iv_guide_women"
                        android:src="@drawable/splash_women"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/iv_guide_women_choose_tip"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:src="@drawable/splash_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_guide_women"
                    android:text="女"
                    android:textSize="18sp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_guide_enterMain"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:text="开启全新生活方式"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
   

</RelativeLayout>
